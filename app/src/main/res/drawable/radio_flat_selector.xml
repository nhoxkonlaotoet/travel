<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true" >
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <corners
                android:radius="25dp"/>
            <solid android:color="@color/colorBlueberry" />
            <stroke
                android:width="1dp"
                android:color="@color/colorBlueberryDark" />

        </shape>
    </item>
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <corners android:radius="25dp" />
            <solid android:color="@color/colorCreme" />
            <stroke
                android:width="1dp"
                android:color="@color/colorCloud" />

        </shape>
    </item>
</selector>