<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item >
                <shape android:shape="oval">
                    <corners android:radius="5dp" />
                    <stroke
                        android:width="1dp"
                        android:color="@color/colorBanana" />
                    <solid android:color="@color/colorTransparent"/>
                </shape>
            </item>
            <item
                android:top="5dp"
                android:left="5dp"
                android:right ="5dp"
                android:bottom="5dp" >
                <shape android:shape="oval">
                    <solid android:color="@color/colorBanana" />
                    <corners android:radius="5dp" />

                </shape>
            </item>
        </layer-list>
    </item>

</selector>
