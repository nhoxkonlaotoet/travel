<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
         <shape>
             <corners android:radius="5dp"/>
             <solid android:color="@color/colorKiwiDark" />
         </shape>

    </item>
    <item>
        <shape>
            <corners android:radius="5dp"/>
            <solid android:color="@color/colorKiwi" />
            <stroke android:color="@color/colorKiwiDark" android:width="1dp"/>
        </shape>


    </item>


</selector>
