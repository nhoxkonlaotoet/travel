<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <layer-list>
            <item android:left="5dp" android:top="5dp">
                <shape>
                    <corners android:radius="5dp" />
                    <solid android:color="@color/colorCloudDark" />
                </shape>
            </item>
            <item android:bottom="3dp" android:right ="2dp">
                <shape>
                    <solid android:color="@color/colorCloudDark" />
                    <corners android:radius="5dp" />

                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item android:left="2dp" android:top="5dp">
                <shape>
                    <corners android:radius="5dp" />
                   <solid android:color="@color/colorCloudDark"/>
                </shape>
            </item>
            <item android:bottom="3dp" android:right ="0dp">
                <shape>
                    <solid android:color="#fff"/>
                    <corners android:radius="5dp" />

                </shape>
            </item>
        </layer-list>
    </item>

</selector>
