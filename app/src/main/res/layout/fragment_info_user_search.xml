<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.travel.views.fragments.InfoUserSearchFragment">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_gravity="center_horizontal"
        android:id="@+id/img_info_user_search_avatar"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/background_circle"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:text="Tài khoản: "
                android:textAlignment="textEnd"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/tv_info_user_search_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AccountName"
                android:textSize="16sp" />

        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giới tính: "
                android:textAlignment="textEnd"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/tv_info_user_search_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nam"
                android:textSize="16sp" />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Điện thoại: "
                android:textAlignment="textEnd"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_info_user_search_sdt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0123456789"
                android:textSize="16sp" />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email: "
                android:textAlignment="textEnd"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_info_user_search_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="account@gmail.com"
                android:textSize="16sp"/>
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/btn_info_user_search_add"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@color/colorButton"
        android:text="Kết Bạn"
        android:textColor="@color/colorTextButton"
        android:textSize="16sp"/>
    <Button
        android:id="@+id/btn_info_user_search_unfriend"
        android:visibility="gone"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@color/colorButton"
        android:text="Huỷ kết Bạn"
        android:textColor="@color/colorTextButton"
        android:textSize="16sp"/>

</LinearLayout>
