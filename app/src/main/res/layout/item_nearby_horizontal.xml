<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="130dp"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:clickable="true"
    android:foreground="@drawable/background_transparent_button">


    <ImageView
        android:id="@+id/imgvNearby"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:foreground="@drawable/background_border_imageview"/>

    <TextView
        android:id="@+id/txtNearbyName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        android:lines="2"
        android:maxLines="1"
        android:textColor="@color/colorLicoriceDark"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/imgvNearby"
        app:layout_constraintRight_toRightOf="@+id/imgvNearby"
        app:layout_constraintTop_toBottomOf="@+id/imgvNearby" />
</android.support.constraint.ConstraintLayout>
