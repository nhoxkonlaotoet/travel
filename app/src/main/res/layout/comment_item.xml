<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <ImageView
            android:id="@+id/img_comment_avatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/colorAccent"/>
        <TextView
            android:id="@+id/txt_comment_name"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="20sp"
            android:textColor="#000"
            android:layout_toRightOf="@id/img_comment_avatar"/>
        <TextView
            android:id="@+id/txt_comment_content"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="holy shit!"
            android:textColor="#000"
            android:textSize="20sp"
            android:layout_toRightOf="@id/img_comment_avatar"
            android:layout_below="@id/txt_comment_name"/>
</RelativeLayout>