<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.travel.views.fragments.SelectMyTourFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorGreen"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Danh sách tour"
                android:textColor="#fff"
                android:textSize="22sp"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                />
            <LinearLayout
                android:id="@+id/btnScan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="5dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:clickable="true"
                android:background="@drawable/background_small_button">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/qr"
                    android:padding="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Quét tour"
                    android:textColor="@color/colorText"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:layout_marginRight="10dp"/>

            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layoutLogin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true">
                <ImageView
                    android:id="@+id/imgvLogo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_world"
                    android:layout_centerHorizontal="true"/>
                <TextView
                    android:id="@+id/txtLetLogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Đăng nhập để xem tour của bạn"
                    android:textSize="20sp"
                    android:textColor="@color/colorText"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/imgvLogo"
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="10dp"/>
                <Button
                    android:id="@+id/btnLogin"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Đăng nhập"
                    android:textAllCaps="false"
                    android:background="@drawable/background_button_participate_tour"
                    android:textColor="#fff"
                    android:layout_below="@id/txtLetLogin"
                    android:layout_centerHorizontal="true"
                    android:textSize="20sp"
                    android:layout_marginBottom="10dp"/>
            </RelativeLayout>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/layoutMyTours"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ListView
                android:id="@+id/lstvSelectMyTour"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/btnScan"></ListView>
        </RelativeLayout>
    </LinearLayout>
</FrameLayout>
