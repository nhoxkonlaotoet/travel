<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/layoutUser"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/imgvUserAvatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@mipmap/ic_launcher_round" />

        <TextView
            android:id="@+id/txtUserName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/UserName"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:text="username"
            android:layout_toRightOf="@id/imgvUserAvatar"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_toRightOf="@+id/txtUserName"
            android:text=" đã chia sẻ"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/txtReviewContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutUser"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:text="review's content"
        android:textColor="@color/ReviewContent"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/layoutTourPicture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtReviewContent"
        android:orientation="horizontal"
        android:weightSum="2">

        <ImageView
            android:id="@+id/imgvReviewImage1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_sunset" />
        <ImageView
            android:id="@+id/imgvReviewImage2"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_sunset" />
    </LinearLayout>
</RelativeLayout>