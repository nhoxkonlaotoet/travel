<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.example.administrator.travel.views.activities.ResetPassActivity">

    <EditText
        android:id="@+id/edt_resetpass_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Nhập địa chỉ email tại đây"
        android:inputType="textEmailAddress" />

    <Button
        android:id="@+id/btn_resetpass_send"
        android:backgroundTint="@color/colorButton"
        android:text="Đây là Email của tôi!"
        android:onClick="SendResetPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="20dp"
        android:background="@color/colorButton"
        android:padding="12dp"
        android:textColor="@color/colorTextButton"/>
</LinearLayout>
