<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">
    <RelativeLayout
        android:id="@+id/layoutImageNearby"
        android:layout_width="100dp"
        android:layout_height="100dp">
        <ImageView
            android:id="@+id/imgvNearby"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"/>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/layoutImageNearby">
        <TextView
            android:id="@+id/txtNearbyName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/colorText"
            android:text="Bánh mì quán"
            android:maxLines="1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_location_on_black_24dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="15sp"
                    android:textColor="@color/colorHintText"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:text="Cách "/>
                  <TextView
                    android:id="@+id/txtNearbyDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="15sp"
                    android:textColor="@color/colorHintText"
                    android:gravity="center"
                    android:text="4.5km"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/imgvRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_star_yellow_24dp" />
                <TextView
                    android:id="@+id/txtRating"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:shadowColor="@color/colorHintText"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:layout_marginLeft="5dp"
                    android:text="4.5"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1">
            <ImageView
                android:id="@+id/imgvOpen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_open"/>
                <TextView
                    android:id="@+id/txtOpen"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:shadowColor="@color/colorHintText"
                    android:layout_marginLeft="5dp"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:text="Mở cửa"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/imgvPriceLevel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_money_24dp"/>
                <TextView
                    android:id="@+id/txtPriceLevel"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:shadowColor="@color/colorHintText"
                    android:layout_marginLeft="5dp"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:text="Đắt"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>