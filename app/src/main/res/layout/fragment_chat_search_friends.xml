<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    tools:context="com.example.administrator.travel.views.activities.ChatSearchFriendsActivity">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
        <Button
            android:onClick="OnClickBackContactSearch"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@drawable/touch_btn_back"
            android:layout_gravity="center_vertical"
            tools:ignore="OnClick" />
        <EditText
            android:id="@+id/edt_chat_contact_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:hint="Tim kiem"
            android:singleLine="true"
            android:drawableRight="@drawable/touch_menu_search"
            android:inputType="textPersonName"/>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_chat_contact_friendearch"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
