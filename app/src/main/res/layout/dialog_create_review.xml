<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <EditText
        android:id="@+id/edittxtContent"
        android:layout_width="match_parent"
        android:layout_height="120dp"/>
    <RelativeLayout
        android:id="@+id/layoutImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">
        <ImageView
            android:id="@+id/imgvAdd"
            android:layout_width="60dp"
            android:layout_height="70dp"
            app:srcCompat="@drawable/ic_plus"
            android:padding="15dp"
            android:background="@drawable/background_transparent_button"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">
            <Button
                android:id="@+id/btnSendReview"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="Gửi"
                android:textColor="#fff"
                android:background="@drawable/background_button_participate_tour"
                android:layout_marginRight="50dp"
                android:textAllCaps="false"/>
            <Button
                android:id="@+id/btnCancel"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="Hủy"
                android:textColor="@color/colorLicoriceDark"
                android:background="@drawable/background_transparent_button"
                android:layout_toRightOf="@+id/btnSendReview"
                android:textAllCaps="false"/>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>