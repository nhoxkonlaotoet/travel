<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:paddingBottom="20dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imgvUserAvatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/txtUserName"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#000"
            android:layout_toRightOf="@id/imgvUserAvatar"/>
        <TextView
            android:id="@+id/txtActivityTime"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 phút"
            android:layout_toRightOf="@id/imgvUserAvatar"
            android:layout_below="@id/txtUserName"/>

    </RelativeLayout>
    <TextView
        android:id="@+id/txtActivityContent"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hôm nay thật toẹt vời?"
        android:textColor="@color/colorLicoriceDark"/>
</LinearLayout>