<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">
    <RelativeLayout
        android:id="@+id/layoutMyTourNameandStartDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txtMyTourName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tour du lịch Đà Lạt"
            android:textColor="@color/colorText"
            android:layout_marginBottom="5dp"/>
        <LinearLayout
            android:id="@+id/layoutMyTourStartDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtMyTourName">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thời gian "
                android:textColor="@color/colorText"/>
            <TextView
                android:id="@+id/txtStartDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1/10/2018 - 5/1/2018"
                android:textColor="@color/colorText"/>

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>