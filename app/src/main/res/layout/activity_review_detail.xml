<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.travel.views.activities.ReviewDetailActivity">
    <ImageView
        android:id="@+id/imgvReviewerAvatar"
        android:layout_width="100dp"
        android:layout_height="100dp" />
    <TextView
        android:id="@+id/txtReviewerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imgvReviewerAvatar"
        android:text="Hiep"
        android:textSize="20sp"
        android:textColor="@color/colorText"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtReviewerName"
        android:layout_toRightOf="@+id/imgvReviewerAvatar"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="đánh giá "
            android:layout_marginLeft="10dp"/>
        <RatingBar
            android:id="@+id/ratingBarReview"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="80dp"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:text=" lúc "/>
        <TextView
            android:id="@+id/txtReviewTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20/12/2018"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/imgvReviewerAvatar">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <RelativeLayout
                android:id="@+id/layoutImageContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">
            </RelativeLayout>
            <TextView
                android:id="@+id/txtReviewContent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="nội dung review"
                android:textColor="@color/colorText"
                android:layout_below="@+id/layoutImageContainer"
                android:textSize="18sp"
                android:padding="5dp"/>
    </RelativeLayout>
    </ScrollView>
</RelativeLayout>
