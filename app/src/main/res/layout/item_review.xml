<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="horizontal">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgvReviewer"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:padding="10dp"
        app:civ_border_color="@color/colorBanana"
        app:civ_border_width="2dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imgvReviewer"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtReviewerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/colorLicoriceDark"
            android:textSize="16sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp">

            <RatingBar
                android:id="@+id/ratingBarReview"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="80dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtRatingDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/ratingBarReview"
                android:layout_alignTop="@+id/ratingBarReview"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/ratingBarReview"
                android:text="5 tháng 12 năm 2018" />
        </RelativeLayout>

        <TextView
            android:id="@+id/txtReviewCOntent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:text="tour toẹt vời :D"
            android:textColor="@color/colorHintText"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Xem thêm"
            android:textStyle="italic|bold" />
    </LinearLayout>


</RelativeLayout>