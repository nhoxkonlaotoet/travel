<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.administrator.travel.views.activities.MapsActivity">
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <RelativeLayout
        android:id="@+id/layoutPlaceAutoComplete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/background_small_button">

        <fragment
            android:id="@+id/place_autocomplete"
            android:name="com.google.android.gms.location.places.ui.PlaceAutocompleteFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        </RelativeLayout>
    <RelativeLayout
        android:id="@+id/btnChooseMyLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:padding="5dp"
        android:background="@drawable/background_small_button"
        android:onClick="btnChooseMyLocation_Click"
        android:layout_below="@+id/layoutPlaceAutoComplete"
        android:layout_centerHorizontal="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chọn vị trí của tôi"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp">

        <Button
            android:id="@+id/btnPrevious"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="Điểm trước"
            android:textAllCaps="false"
            android:background="@drawable/background_small_button"
            android:layout_marginRight="3dp"
            android:onClick="btnPrevious_Click"/>

        <Button
            android:id="@+id/btnNow"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Hiện tại"
            android:textAllCaps="false"
            android:background="@drawable/background_small_button"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:onClick="btnNow_Click"/>

        <Button
            android:id="@+id/btnNext"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="Điểm sau"
            android:textAllCaps="false"
            android:background="@drawable/background_small_button"
            android:layout_marginLeft="3dp"
            android:onClick="btnNext_Click"/>

    </LinearLayout>


</RelativeLayout>
