<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constrain_item_friend"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/common_google_signin_btn_icon_light_normal_background">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_item_searchfriend_avartar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="@+id/imgState"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_settings_black_24dp"
        tools:ignore="UnknownId" />

    <TextView
        android:id="@+id/tv_item_searchfriend_name_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:text=" "
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/img_item_searchfriend_avartar"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>