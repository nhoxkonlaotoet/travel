<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:paddingBottom="20dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_status_avatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/tour"/>
        <TextView
            android:id="@+id/txt_status_name"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tuan"
            android:textSize="20sp"
            android:textColor="#000"
            android:layout_toRightOf="@id/img_status_avatar"/>
        <TextView
            android:id="@+id/txt_status_time"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 phút"
            android:layout_toRightOf="@id/img_status_avatar"
            android:layout_below="@id/txt_status_name"/>
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="công khai"
            android:layout_below="@id/txt_status_name"
            android:layout_toRightOf="@id/txt_status_time" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/ic_more_horiz_black_24dp"
            android:background="@null"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <TextView
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hôm nay thật toẹt vời?"
        android:textColor="@color/colorText"/>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow
            android:weightSum="2">
            <ImageView
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:layout_height="?attr/actionBarSize"
                android:background="#ccc"/>

            <RelativeLayout
                android:layout_weight="1"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_margin="2dp"
                    android:layout_height="?attr/actionBarSize"
                    android:background="#ccc"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:tint="#a8000000"
                    android:text="+1"
                    android:textSize="40sp"
                    android:gravity="center"/>
            </RelativeLayout>
        </TableRow>
    </TableLayout>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_weight="1">
            <ImageButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/ic_sentiment_very_satisfied_black_24dp"
                android:background="@null"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Like"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_weight="1">
            <ImageButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/ic_chat_bubble_outline_black_24dp"
                android:background="@null"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="comment"/>
        </LinearLayout>
    </TableRow>
</LinearLayout>