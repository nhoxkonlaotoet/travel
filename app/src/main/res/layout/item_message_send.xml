<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp">

    <!--message-->
    <TextView
        android:id="@+id/tv_itemmessage_message_send"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/rounded_rectangle_blue"
        android:maxWidth="250dp"
        android:padding="8dp"
        android:text=" aa"
        android:textColor="#ffffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>
    <TextView
        android:id="@+id/tv_itemmessage_timesend_message"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:text="11:40,02/04/2018"
        android:textSize="8sp"
        app:layout_constraintTop_toBottomOf="@+id/tv_itemmessage_message_send"
        app:layout_constraintEnd_toEndOf="@+id/tv_itemmessage_message_send" />


    <!--IMAGE-->
    <TextView
        android:id="@+id/tv_itemmessage_timesend_image"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="8dp"
        android:textSize="8sp"
        android:text="11:40,02/04/2018"
        app:layout_constraintTop_toBottomOf="@+id/img_itemmessage_image_send"
        app:layout_constraintEnd_toEndOf="@+id/img_itemmessage_image_send" />
    <ImageView
        android:id="@+id/img_itemmessage_image_send"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@color/colorPrimary"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:maxWidth="250dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <!--AUDIO-->
    <TextView
        android:id="@+id/tv_itemmessage_totaltime_record"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0:10"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />
    <ImageButton
        android:id="@+id/ibtn_itemmessage_play_record"
        android:visibility="gone"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@drawable/rounded_circle_blue"
        app:layout_constraintEnd_toStartOf="@+id/tv_itemmessage_totaltime_record"
        app:srcCompat="@android:drawable/ic_media_play" />
    <TextView
        android:id="@+id/tv_itemmessage_timesend_record"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="audiotime"
        app:layout_constraintTop_toBottomOf="@+id/ibtn_itemmessage_play_record"
        app:layout_constraintStart_toStartOf="@+id/ibtn_itemmessage_play_record"/>

</android.support.constraint.ConstraintLayout>
